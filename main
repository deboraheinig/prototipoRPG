#include <iostream>
#include <string>


struct arma {
	std::string nome;
	int danoMax;
	int danoMin;
};

struct jogador {
	int nivel;
	int vida = 600;
	std::string armaj = "espada";
};

struct inimigo {
	std::string nome;
	int vida = 100;
	arma armai;
};

struct fase {
	std::string nome;
	inimigo inimigos[5];
};

void EntrandoNaFase(fase F){
	std::cout << "*******************************" << std::endl;
	std::cout << "Entrando no " << F.nome << "..." << std::endl;
	std::cout << "" << std::endl;
}

void inimigoAtacou(inimigo I) {

	std::cout << "O inimigo " << I.nome << "te atacou com um " << I.armai.nome << "!" << std::endl;
}

template <typename T1>
bool morreu(T1 n1 = 0)
{
	if (n1 >= 0)
	{
		return true; // vivo
	}
	else
	{
		return false; // morto
	}
}

template <typename T2>
bool morreu(T2 n1, T2 n2)
{
	if (n1 >= 0)
	{
		return true; // vivo
	}
	else
	{
		return false; // morto
	}
}

int main() {
	fase F;
	F.nome = "Deserto do Saara";
	F.inimigos[5];

	arma A[5];
	A[0].nome = "Canivete ";
	A[0].danoMax = 5;
	A[0].danoMin = 1;

	A[1].nome = "Machado ";
	A[1].danoMax = 10;
	A[1].danoMin = 5;

	A[2].nome = "Arco e flecha ";
	A[2].danoMax = 15;
	A[2].danoMin = 10;

	A[3].nome = "Pistola";
	A[3].danoMax = 20;
	A[3].danoMin = 15;

	A[4].nome = "Espada ";
	A[4].danoMax = 30;
	A[4].danoMin = 20;

	inimigo I[5];
	I[0].vida = 100;
	I[0].nome = "Golem ";
	I[0].armai.nome = "Canivete";

	I[1].nome = "Arara ";
	I[1].armai.nome = "Machado ";

	I[2].nome = "Bandido ";
	I[2].armai.nome = "Arco e flecha ";

	I[3].nome = "Coveiro ";
	I[3].armai.nome = "Pistola ";

	I[4].nome = "Pedreiro ";
	I[4].armai.nome = "Espada ";

	jogador debora;
	debora.armaj;
		
	EntrandoNaFase(F);
	inimigoAtacou(I[0]);

}
