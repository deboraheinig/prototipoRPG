#include <iostream>
#include <string>


struct arma {
	std::string nome;
	int danoMax;
	int danoMin;
};

struct jogador {
	int nivel;
	int vida = 600;
	arma armaj;
};

struct inimigo {
	std::string nome;
	int vida = 100;
	arma armai;
};

struct fase {
	std::string nome;
	inimigo I[5];
};

void EntrandoNaFase(fase F) {
	std::cout << "*******************************" << std::endl;
	std::cout << "Entrando no " << F.nome << "..." << std::endl;
	std::cout << "" << std::endl;
}

void Ataque() {

	std::cout << "O inimigo " << I.nome << "te atacou com um " << I.armai.nome << "!" << std::endl;
}

template <typename T1>
bool morreu(T1 n1 = 0)
{
	if (n1 >= 0)
	{
		return true; // vivo
	}
	else
	{
		return false; // morto
	}
}

template <typename T2>
bool dano(T2 n1, T2 n2)
{
	int  dano1 = 0;

	while (n1 >= 0)
	{

	}
}

int main() {


	fase F;
	F.nome = "Deserto do Saara";
	F.I[5];

	arma A[5];
	A[0].nome = "Canivete ";
	A[0].danoMax = 5;
	A[0].danoMin = 1;

	A[1].nome = "Machado ";
	A[1].danoMax = 15;
	A[1].danoMin = 5;

	A[2].nome = "Arco e flecha ";
	A[2].danoMax = 20;
	A[2].danoMin = 10;

	A[3].nome = "Pistola";
	A[3].danoMax = 30;
	A[3].danoMin = 10;

	A[4].nome = "Espada ";
	A[4].danoMax = 25;
	A[4].danoMin = 15;

	
	F.I[0].vida = 200;
	F.I[0].nome = "Golem ";
	F.I[0].armai = A[0];;

	F.I[1].vida = 25;
	F.I[1].nome = "Arara ";
	F.I[1].armai = A[1];;

	F.I[2].vida = 60;
	F.I[2].nome = "Homem macaco ";
	F.I[2].armai = A[2];;

	F.I[3].vida = 100;
	F.I[3].nome = "Coveiro ";
	F.I[3].armai = A[3];

	F.I[4].vida = 120;
	F.I[4].nome = "Pedreiro ";
	F.I[4].armai = A[4];

	jogador debora;
	debora.armaj = A[3];

	EntrandoNaFase(F);
	inimigoAtacou([0]);
	dano()
}
